<% layout('/layouts/boilerplate') -%>


    <div class="row mt-3">
        <div class="col-sm-8 offset-2">

            <h3>Edit your Listing</h3>
            <form method="post" action="/listings/<%=listing._id%>?_method=PUT" novalidate class="needs-validation"
                enctype="multipart/form-data">
                <div class="mb-3">
                    <label for="title" class="form-lable">Title</label>
                    <input type="text" name="listing[title]" id="" value="<%=listing.title%>" class="form-control"
                        required>
                    <div class="valid-feedback">
                        Tittle Looks good!
                    </div>
                </div>
                <div class="mb-3">
                    <label for="description" class="form-lable">Description</label>
                    <textarea type="text" name="listing[description]" id=""
                        <%=listing.description%>  class="form-control" required></textarea>
                    <div class="valid-feedback">
                        Description Looks good!
                    </div>
                </div>
                <div class="mb-3">
                    <label for="image" class="form-lable">Original Image </label> <br>
                    <img src="<%= originalImageUrl%>" alt="">
                </div>
                <div class="mb-3">
                    <label for="image" class="form-lable">Upload New Image </label>
                    <input type="file" name="listing[image][url]" id="" class="form-control">
                </div>
                <div class="row">
                    <div class="mb-3 col-md-4">
                        <label for="price" class="form-lable">Price</label>
                        <input type="number" name="listing[price]" id="" value="<%=listing.price%>" class="form-control"
                            required>
                        <div class="invalid-feedback">
                            Please choose a valid price.
                        </div>
                    </div>
                    <div class="mb-3 col-md-8">
                        <label for="country" class="form-lable">Country</label>
                        <input type="text" name="listing[country]" id="" value="<%=listing.country%>"
                            class="form-control" required>
                        <div class="invalid-feedback">
                            Please choose a valid country name.
                        </div>
                    </div>
                </div>

                <div class="mb-3">
                    <label for="location" class="form-lable">Location</label>
                    <input type="text" name="listing[location]" id="" value="<%=listing.location%>" class="form-control"
                        required>
                    <div class="invalid-feedback">
                        Please choose a valid location.
                    </div>
                </div>
                <button class="btn btn-dark mt-3 edit-btn">Edit</button>
            </form>

        </div>
    </div>