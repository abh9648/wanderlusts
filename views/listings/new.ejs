<% layout('/layouts/boilerplate') -%>
    <div class="row">
        <div class="col-sm-8 offset-2">
            <br>
            <h3>Create a New Listing</h3>
            <form method="post" action="/listings" novalidate class="needs-validation" enctype="multipart/form-data">
                <div class="mb-3">
                    <label for="title" class="form-lable">Title</label>
                    <input type="text" name="listing[title]" id="" placeholder="Add a catchy title "
                        class="form-control" required>
                        <div class="valid-feedback">
                           Tittle Looks good!
                          </div>    
                </div>
                <div class="mb-3">
                    <label for="description" class="form-lable">Description</label>
                    <textarea type="text" name="listing[description]" id="" class="form-control" required></textarea>
                    <div class="valid-feedback">
                        Description Looks good!
                       </div> 
                </div>
                <!-- <div class="mb-3">
                    <label for="image" class="form-lable">Image Link</label>
                    <input type="text" name="listing[image][url]" id="" placeholder="enter image URL/Link"
                        class="form-control">
                        <div class="invalid-feedback">
                            Please choose a valid img link.
                          </div>    
                </div> -->
                <div class="mb-3">
                    <label for="image" class="form-lable">Upload Listing Image</label>
                    <input type="file" name="listing[image][url]" id="" placeholder="enter image URL/Link"
                        class="form-control">
                        <div class="invalid-feedback">
                            Please choose a valid img link.
                          </div>    
                </div>
                <div class="row">
                    <div class="mb-3 col-md-4">
                        <label for="price" class="form-lable">Price</label>
                        <input  name="listing[price]" id="" placeholder="1200" class="form-control" required>
                        <div class="invalid-feedback">
                            Please choose a valid price.
                          </div>
                    </div>
                    <div class="mb-3 col-md-8">
                        <label for="country" class="form-lable">Country</label>
                        <input type="text" name="listing[country]" id="" placeholder="India" class="form-control" required>
                        <div class="invalid-feedback">
                            Please choose a valid country name.
                          </div>
                    </div>
                </div>
                <div class="mb-3">
                    <label for="location" class="form-lable">Location</label>
                    <input type="text" name="listing[location]" id="" placeholder="Lucknow,Utter Paradesh"
                        class="form-control" required>
                        <div class="invalid-feedback">
                            Please choose a valid location.
                          </div>    
                </div>
                <button class="btn btn-dark mt-3 add-btn">Add</button>
            </form>
        </div>
    </div>